# Nginx Configuration for Code Smell Detection System
# Place this in /etc/nginx/sites-available/code-smell

upstream node_backend {
    server localhost:8000;
}

upstream python_backend {
    server localhost:5000;
}

upstream nextjs_frontend {
    server localhost:3000;
}

# Redirect HTTP to HTTPS (optional - comment out for HTTP only)
# server {
#     listen 80;
#     server_name 134.209.157.11;
#     return 301 https://$server_name$request_uri;
# }

# Frontend Server
server {
    listen 80;
    server_name 134.209.157.11;
    
    # Gzip compression
    gzip on;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json;
    gzip_min_length 1000;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # Frontend
    location / {
        proxy_pass http://nextjs_frontend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_redirect off;
    }
    
    # Node Backend API
    location /api/ {
        proxy_pass http://node_backend/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        # Increase timeout for file uploads
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        send_timeout 300s;
    }
    
    # Health check endpoints
    location /api/v1/health {
        proxy_pass http://node_backend;
        access_log off;
    }
    
    location /health {
        proxy_pass http://python_backend;
        access_log off;
    }
    
    # Deny access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Logging
    access_log /var/log/nginx/code-smell-access.log;
    error_log /var/log/nginx/code-smell-error.log;
}
